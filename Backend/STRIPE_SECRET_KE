// payments.js (Node.js/Express backend)
const express = require('express');
const router = express.Router();
const Stripe = require('stripe');
const stripe = Stripe('sk_test_...YOUR_SECRET_KEY...'); // Replace with your Stripe secret key

router.post('/create-intent', async (req, res) => {
  const { amount, coupon } = req.body;
  try {
    // Optionally validate coupon and adjust amount here
    const paymentIntent = await stripe.paymentIntents.create({
      amount: Math.round(amount), // amount in cents
      currency: 'usd',
      // You can add metadata: { coupon }
    });
    res.json({ clientSecret: paymentIntent.client_secret });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

module.exports = router;